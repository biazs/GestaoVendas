@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrar";
}

<h1 class="center item-login">@ViewData["Title"]</h1>

<div class="row center">
    <div class="col-md-12">
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h4 class="center item-menu">Crie uma nova conta</h4>
            <hr class="center col-md-4" />
            <div asp-validation-summary="All" class="text-danger center col-md-4"></div>
            <div class="form-group center col-md-4">
                <input asp-for="Input.Email" class="form-control" placeholder="E-mail" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group center col-md-4">
                <input asp-for="Input.Password" class="form-control" placeholder="Senha" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group center col-md-4">
                <input asp-for="Input.ConfirmPassword" class="form-control" placeholder="Confirme a senha" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-group center col-md-4">
                <button type="submit" class="btn btn-block button-login">Registrar</button>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
