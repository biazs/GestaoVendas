@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Esqueceu a senha?";
}

<h1 class="center item-login">@ViewData["Title"]</h1>
<h4 class="center item-menu">Preencha seu email</h4>
<hr class="center col-md-4" />
<div class="row">
    <div class="col-md-12">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group center col-md-4">
                <input asp-for="Input.Email" class="form-control" placeholder="E-mail" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group center col-md-4">
                <button type="submit" class="btn btn-block button-login">Enviar</button>
            </div>
            <div class="form-group center col-md-4">
                <label style="font-size: 10px;">*Implementação em próxima release</label>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
