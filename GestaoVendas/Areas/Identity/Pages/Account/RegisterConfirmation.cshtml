@page
@model RegisterConfirmationModel
@{
    ViewData["Title"] = "Usuário registrado!";
}

<h1>@ViewData["Title"]</h1>
@{
    if (@Model.DisplayConfirmAccountLink)
    {

        <p>
            Agradecemos o cadastro. <a asp-action="Index" asp-controller="Home">Clique aqui</a> para ir para a tela inicial.
        </p>
    }
    else
    {
        <p>
            Agradecemos o cadastro. <a asp-action="Index" asp-controller="Home">Clique aqui</a> para ir para a tela inicial.
        </p>
    }
}
