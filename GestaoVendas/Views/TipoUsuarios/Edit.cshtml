@model GestaoVendas.Models.TipoUsuario

@{
    ViewData["Title"] = "Alterar";
}

<h1 class="titulo text-info">Alterar</h1>

<h4 class="titulo text-info" style="font-size: 20px;">Tipo Usuário</h4>
<hr />
@if (TempData["MSG_E"] != null)
{
    <p class="alert alert-danger">@TempData["MSG_E"]</p>
}
<div class="row">
    <div class="col-md-12">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group col-md-4">
                <label asp-for="NomeTipoUsuario" class="control-label"></label>
                <input asp-for="NomeTipoUsuario" class="form-control" />
                <span asp-validation-for="NomeTipoUsuario" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-block button-save" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-block button-list">Listagem de tipos de usuários</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
