@model Relatorio

<h2>Quantidade de Vendas por Vendedor</h2>

<form asp-controller="Relatorio" asp-action="VendasPorVendedor" method="post">

    <div class="form-group">
        <label>Período</label>
        <input asp-for="DataDe" type="date" class="form-control col-md-2" />
    </div>
    <div class="form-group">
        <input asp-for="DataAte" type="date" class="form-control col-md-2" />

    </div>
    <button type="submit" class="btn btn-block btn-success">Pesquisar</button>
</form>

<br />

<script type="text/javascript" src="https://www.gstatic.com/charts/loader.js"></script>
<div id="chart_div" style="width: 900px; height: 500px;"></div>
<script type="text/javascript">

    google.charts.load('current', {packages: ['corechart', 'bar']});
    google.charts.setOnLoadCallback(CarregaDados);
    function CarregaDados() {
        $.ajax({
            url: '@Url.Action("RelatorioController", "VendasPorVendedor")',
            dataType: "json",
            type: "GET",
            error: function(xhr, status, error) {
                var err = eval("(" + xhr.responseText + ")");
                toastr.error(err.message);
            },
            success: function(data) {
                GraficoPopulacional(data);
                return false;
            }
        });
        return false;
    }
    function GraficoPopulacional(data) {
        var dataArray = [
            ['Cidade', '2010' , '2017']
        ];
        $.each(data, function(i, item) {
            dataArray.push([item.cidade, item.populacao2010, item.populacao2017]);
        });
        var data = google.visualization.arrayToDataTable(dataArray);
        var options = {
            title: 'Quantidade de Vendas por Vendedor',
            chartArea: {
                width: '50%'
            },
            colors: ['#b0120a', '#ffab91'],
            hAxis: {
                title: 'Populacao Total (em milhões)',
                minValue: 0
            },
            vAxis: {
                title: 'Cidade'
            }
        };
        var chart = new google.visualization.LineChart(document.getElementById('chart_div'));
        chart.draw(data, options);
        return false;
    }
</script> 