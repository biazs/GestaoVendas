@model GestaoVendas.Models.PerfilUsuario

@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Cadastrar Perfil de Usuário</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="IdTipoUsuario" class="control-label"></label>
                <select asp-for="IdTipoUsuario" class="form-control" asp-items="ViewBag.IdTipoUsuario"></select>
            </div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <select asp-for="UserId" class="form-control" asp-items="ViewBag.UserId"></select>
            </div>

            <div class="form-group">
                <label class="control-label">Nome</label>
                <input type="text" asp-controller="PerfilUsuario" class="form-control" name="nome_vendedor" id="nome_vendedor" required />
                <span class="text-danger" id="msg"></span>
            </div>


            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-block btn-success" onclick="Enviardados()" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-block btn-primary">Listagem de perfis de usuários</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}

<script language="JavaScript">
    function Enviardados() {

        if (document.getElementById("nome_vendedor").value == "") {
            msg.innerHTML = "Campo obrigatório";
        }
    }
</script>