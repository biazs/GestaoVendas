@model IEnumerable<GestaoVendas.Models.Venda>

@{
    ViewData["Title"] = "Vendas";
}

<h1>Vendas</h1>

<br />
<div class="row">
    <p>
        <a asp-action="Create" class="btn button-save">Registrar Venda</a>
        <a href="../Clientes/VisualizarComoPDF/" class="btn btn-outline-danger" target="_blank"><img src="../img/pdf.png" title="Gerar PDF" alt="Gerar PDF" width="40" height="40" />Gerar PDF</a>
    </p>
</div>
<br />
<table class="table table-bordered">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Id)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Data)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Vendedor)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cliente)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Total)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Id)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Data)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Vendedor.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cliente.Nome)
                </td>
                <td>
                    R$ @Html.DisplayFor(modelItem => item.Total)
                </td>
                <td align="center">
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn button-detalhe">Detalhes</a>
                    @if (ViewBag.TemAcesso == true)
                    {
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn button-remove">Cancelar</a>
                    }

                </td>
            </tr>
        }
    </tbody>
</table>
