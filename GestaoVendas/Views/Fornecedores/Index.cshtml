@model IEnumerable<GestaoVendas.Models.Fornecedor>

@{
    ViewData["Title"] = "Fornecedores";
}

<h1 class="titulo text-info">Fornecedores</h1>
@if (TempData["MSG_S"] != null)
{
    if (@TempData["MSG_S"].ToString() == GestaoVendas.Libraries.Mensagem.Mensagem.MSG_S001.ToString())
    {
        <p class="alert alert-success">@TempData["MSG_S"]</p>
    }
    else if (@TempData["MSG_S"].ToString() == GestaoVendas.Libraries.Mensagem.Mensagem.MSG_S002.ToString())
    {
        <p class="alert alert-danger">@TempData["MSG_S"]</p>
    }
}

<div class="row">
    <p>
        <a asp-action="Create" class="btn button-novo"><img src="../img/novo.png" alt="Cadastrar novo fornecedor" title="Cadastrar novo fornecedor" width="34" height="34" />Cadastrar novo</a>
        <a href="../Fornecedores/VisualizarComoPDF/" class="btn button-pdf" target="_blank"><img src="../img/pdf.png" title="Gerar PDF" alt="Gerar PDF" width="34" height="34" />Gerar PDF</a>
    </p>
</div>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Cnpj)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Contato)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Telefone)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Cnpj)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Contato)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Telefone)
                </td>
                <td align="center">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn button-altera">Alterar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn button-detalhe">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn button-remove">Remover</a>
                </td>
            </tr>
        }
    </tbody>
</table>
