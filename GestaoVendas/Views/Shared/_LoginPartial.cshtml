@using Microsoft.AspNetCore.Identity
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<div class="navbar-collapse collapse d-sm-inline-flex ">
    <ul class="navbar-nav menu_ul">
        @if (SignInManager.IsSignedIn(User))
        {

            <li class="menu_li">
                <a class="nav-link text-info" asp-area="" asp-controller="Clientes" asp-action="Index">Cliente</a>
            </li>
            <li class="menu_li">
                <a class="nav-link text-info" asp-area="" asp-controller="Vendedores" asp-action="Index">Vendedor</a>
            </li>
            <li class="nav-item menu_li">
                <a class="nav-link text-info" asp-area="" asp-controller="Fornecedores" asp-action="Index">Fornecedor</a>
            </li>
            <li class="nav-item menu_li">
                <a class="nav-link text-info" asp-area="" asp-controller="Produtos" asp-action="Index">Produto</a>
            </li>
            <li class="nav-item menu_li">
                <a class="nav-link text-info" asp-area="" asp-controller="Vendas" asp-action="Index">Venda</a>
            </li>
            <li class="nav-item menu_li">
                <a class="nav-link text-info" asp-area="" asp-controller="Relatorio" asp-action="Index">Relatório</a>
            </li>
            <li class="nav-item menu_li">
                <a class="nav-link text-info" asp-area="" asp-controller="Configuracao" asp-action="Index">Configuração</a>
            </li>
        }
    </ul>
</div>

<div class="navbar-collapse collapse d-sm-inline-flex flex-sm-row-reverse ">
    <ul class="navbar-nav menu_ul  ">
        @if (SignInManager.IsSignedIn(User))
        {
            <li class="nav-item">
                <a class="nav-link text-info" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Olá @User.Identity.Name!</a>
            </li>
            <li class="nav-item">
                <form class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                    <button type="submit" class="nav-link btn btn-link text-info">Sair</button>
                </form>
            </li>
        }
        else
        {
            <li class="nav-item">
                <a class="nav-link text-info" asp-area="Identity" asp-page="/Account/Register">Registrar</a>
            </li>
            <li class="nav-item ">
                <a class="nav-link text-info" asp-area="Identity" asp-page="/Account/Login">Login</a>
            </li>
        }
    </ul>
</div>
