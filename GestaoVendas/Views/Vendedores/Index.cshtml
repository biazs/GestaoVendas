@model IEnumerable<GestaoVendas.Models.Vendedor>

@{
    ViewData["Title"] = "Vendedores";
}

<h1>Vendedores</h1>

<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Email)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Nome)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn"><img src="../img/lapis.png" alt="Alterar" title="Alterar" width="26" height="26" /></a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn"><img src="../img/lupa2.png" alt="Detalhar" title="Detalhar" width="26" height="26" /></a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn"><img src="../img/cancelar.png" alt="Remover" title="Remover" width="26" height="26" /></a>
                    <a href="../Vendedores/VisualizarComoPDF/" target="_blank" class="btn"><img src="../img/pdf.png" title="Gerar PDF" alt="Gerar PDF" width="30" height="30" /></a>
                </td>
            </tr>
        }
    </tbody>
</table>
