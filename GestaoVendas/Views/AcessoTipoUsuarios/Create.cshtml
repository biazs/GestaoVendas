@model GestaoVendas.Models.AcessoTipoUsuario

@{
    ViewData["Title"] = "Cadastrar";
}

<h1 class="titulo text-info">Cadastrar</h1>

<h4 class="titulo text-info" style="font-size: 20px;">Acesso Tipo Usuário</h4>
<hr />
@if (TempData["MSG_E"] != null)
{
    <p class="alert alert-danger">@TempData["MSG_E"]</p>
}
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-4">
                <label asp-for="IdFuncionalidade" class="control-label"></label>
                <select asp-for="IdFuncionalidade" class="form-control" asp-items="ViewBag.IdFuncionalidade"></select>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="IdTipoUsuario" class="control-label"></label>
                <select asp-for="IdTipoUsuario" class="form-control" asp-items="ViewBag.IdTipoUsuario"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-block button-save" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-block button-list">Listagem de acessos de tipos de usuário</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
