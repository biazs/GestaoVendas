@model GestaoVendas.Models.AcessoTipoUsuario

@{
    ViewData["Title"] = "Cadastrar";
}

<h1>Cadastrar</h1>

<h4>Acesso Tipo Usuário</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="NomeFuncionalidade" class="control-label"></label>
                <input asp-for="NomeFuncionalidade" class="form-control" />
                <span asp-validation-for="NomeFuncionalidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="IdTipoUsuario" class="control-label"></label>
                <select asp-for="IdTipoUsuario" class="form-control" asp-items="ViewBag.IdTipoUsuario"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-block btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-block btn-primary">Listagem de acessos de tipos de usuário</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
