@model IEnumerable<GestaoVendas.Models.AcessoTipoUsuario>

@{
    ViewData["Title"] = "Index";
}

<h1>Lista de acessos dos tipos de usuários</h1>

<p>
    <a asp-action="Create"><img src="../img/novo.png" alt="Cadastrar novo Acesso tipo de usuário" title="Cadastrar novo Acesso tipo de usuário" /></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.NomeFuncionalidade)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TipoUsuario)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeFuncionalidade)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.NomeTipoUsuario)
                </td>
                <td align="center">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn button-altera">Alterar</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn button-detalhe">Detalhes</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn button-remove">Remover</a>
                </td>
            </tr>
        }
    </tbody>
</table>
