@model GestaoVendas.Models.Funcionalidade

@{
    ViewData["Title"] = "Alterar";
}

<h1>Alterar Funcionalidade</h1>

<h4></h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group">
                <label asp-for="NomeFuncionalidade" class="control-label"></label>
                <input asp-for="NomeFuncionalidade" class="form-control" />
                <span asp-validation-for="NomeFuncionalidade" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-success" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-block btn-primary">Listagem de funcionalidades</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
