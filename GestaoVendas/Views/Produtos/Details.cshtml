@model GestaoVendas.Models.Produto

@{
    ViewData["Title"] = "Detalhes";
}

<h1 class="titulo text-info">Detalhes do Produto</h1>

<div class="col-sm-12">
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            Quantidade
        </dt>
        <dd class="col-sm-10">
            @try
            {@ViewBag.Quantidade}
        catch { }
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrecoUnitario)
        </dt>
        <dd class="col-sm-10">
            R$ @Html.DisplayFor(model => model.PrecoUnitario)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UnidadeMedida)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UnidadeMedida)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LinkFoto)
        </dt>
        <dd class="col-sm-10">
            @*@Html.DisplayFor(model => model.LinkFoto)*@
            <img src="@Model.LinkFoto" width="150" height="150" />
        </dd>
        <dt class="col-sm-2">
            Fornecedor
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fornecedor.Nome)
        </dd>
    </dl>
</div>
<div class="col-sm-12">
    @if (ViewBag.TemAcessoEditar == true)
    {
        <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-block button-save">Alterar</a>
    }
    <a asp-action="Index" class="btn btn-block button-list">Listagem de Produtos</a>
</div>
