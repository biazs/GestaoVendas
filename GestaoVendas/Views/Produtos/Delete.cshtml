@model GestaoVendas.Models.Produto

@{
    ViewData["Title"] = "Remover";
}

<h1>Remover</h1>

<h3>Deseja realmente excluir o produto selecionado?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Descricao)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>

        <dt class="col-sm-2">
            Quantidade
        </dt>
        <dd class="col-sm-10">
            @try
            {@ViewBag.Quantidade}
        catch { }
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.PrecoUnitario)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.PrecoUnitario)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.UnidadeMedida)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.UnidadeMedida)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.LinkFoto)
        </dt>
        <dd class="col-sm-10">
            <img src="@Model.LinkFoto" width="150" height="150" />
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Fornecedor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Fornecedor.Nome)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Remover registro" class="btn button-delete" />
        <a asp-action="Index" class="btn  button-list">Listagem de Produtos</a>
    </form>
</div>
