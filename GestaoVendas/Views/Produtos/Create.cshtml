@model GestaoVendas.Models.Produto

@{
    ViewData["Title"] = "Cadastrar Produto";
}

<h1>Cadastrar Produto</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group col-md-4">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="Descricao" class="control-label"></label>
                <input asp-for="Descricao" class="form-control" />
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label class="control-label">Quantidade</label>
                <input type="text" asp-controller="Produtos" class="form-control" name="quantidade" id="quantidade" required />
                <span class="text-danger" id="msg"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="PrecoUnitario" class="control-label"></label>
                <input asp-for="PrecoUnitario" class="form-control" id="PrecoUnitario" onblur="MascaraValor();" />
                <span asp-validation-for="PrecoUnitario" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="UnidadeMedida" class="control-label"></label>
                <select asp-for="UnidadeMedida" class="form-control">
                    <option value="Unidade">Unidade</option>
                    <option value="Caixa">Caixa</option>
                    <option value="kg">Kg</option>
                    <option value="Grama">Grama</option>
                    <option value="Litro">Litro</option>
                    <option value="Tonelada">Tonelada</option>
                </select>
                <span asp-validation-for="UnidadeMedida" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="LinkFoto" class="control-label"></label>
                <input asp-for="LinkFoto" class="form-control" />
                <span asp-validation-for="LinkFoto" class="text-danger"></span>
            </div>
            <div class="form-group col-md-4">
                <label asp-for="FornecedorId" class="control-label"></label>
                <select asp-for="FornecedorId" class="form-control" asp-items="ViewBag.FornecedorId"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Cadastrar" class="btn btn-block button-save" onclick="Enviardados()" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index" class="btn btn-block button-list">Listagem de Produtos</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}


<script language="JavaScript">
    function Enviardados() {

        if (document.getElementById("quantidade").value == "") {
            msg.innerHTML = "Campo obrigatório";
        }
    }

    function MascaraValor() {

        //Inserir ponto em PrecoUnitario
        var preco = document.getElementById("PrecoUnitario").value.replace('.', '');
        var tam = preco.length - 2;
        var resultado = preco.substr(0, tam) + "." + preco.substr(-2);

        document.getElementById("PrecoUnitario").value = resultado;
    }

</script>